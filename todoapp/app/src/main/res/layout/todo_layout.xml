<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/pink_border"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/todoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:fontFamily="@font/poppins"
                android:text="Task Title"
                android:textStyle="bold"
                android:textSize="19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/todoDesc"
                android:layout_below="@id/todoTitle"
                android:layout_marginTop="5dp"
                android:maxHeight="170dp"
                android:text="Description"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/pink"/>
            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statu"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtShowDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textDate"
                android:text="11-05-2024"
                android:textColor="@android:color/black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/pri"
                android:layout_marginTop="5dp"
                android:text="Time"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtShowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textTime"
                android:text="00:00"
                android:textColor="@android:color/black"
                android:visibility="visible" />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/todoDesc"
                android:textColor="@color/red"
                android:fontFamily="@font/poppins"
                android:layout_alignParentStart="true"
                android:text="Status"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/statu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status"
                android:fontFamily="@font/poppins"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:text="Not Completed" />
            <TextView
                android:id="@+id/priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/todoDesc"
                android:textColor="@color/red"
                android:fontFamily="@font/poppins"
                android:layout_alignParentEnd="true"
                android:text="Priority"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priority"
                android:fontFamily="@font/poppins"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:text="Low"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>